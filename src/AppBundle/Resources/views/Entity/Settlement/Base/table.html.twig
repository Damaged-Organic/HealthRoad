{# AppBundle/Resources/views/Entity/Settlement/Base/table.html.twig #}
{% extends ( standalone is defined ) ? '::void.html.twig' : 'AppBundle:Entity/Settlement/Base:list.html.twig' %}

{% block variable %}
    <div class="outer scrollable-holder">
        <div class="inner scrollable">

            {% if settlements|length %}
                <table>
                    <tr>

                        {% include 'AppBundle:Entity/Settlement/Table:th.html.twig' %}

                        {% block action_items_th %}{% endblock %}

                    </tr>

                    {% for settlement in settlements %}
                        <tr>

                            {% include 'AppBundle:Entity/Settlement/Table:tr.html.twig' with { 'settlement': settlement } only %}

                            {% block action_items_tr %}{% endblock %}

                        </tr>
                    {% endfor %}

                </table>
            {% else %}
                Список пуст
            {% endif %}

        </div>
    </div>
    <div class="bottom-info-panel">
        {% block action_button %}{% endblock %}

        {% include 'AppBundle:Dashboard/Common:pagination.html.twig' only %}
    </div>
{% endblock %}