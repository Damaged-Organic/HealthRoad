{# AppBundle/Resources/views/Entity/ProductVendingGroup/CRUD/updateItem.html.twig #}
{% extends 'AppBundle:Entity/ProductVendingGroup/Base:item.html.twig' %}

{% block active_product_vending_group_update %}{{ 'class="active"' }}{% endblock %}

{% block data %}

    {% include 'AppBundle:Entity/ProductVendingGroup/Form:form.html.twig' with { 'form': form, 'productVendingGroup': productVendingGroup } only %}

{% endblock %}

{% block action_bottom %}
    <div id="action-holder" class="manage-holder">

        {% if is_granted(constant('AppBundle\\Security\\Authorization\\Voter\\ProductVendingGroupVoter::PRODUCT_VENDING_GROUP_DELETE'), productVendingGroup) %}
            <div class="btn-delete black">
                <a href="{{ path('product_vending_group_delete', { 'id': productVendingGroup.id }) }}" class="icon hrd-delete"></a>
            </div>
        {% endif %}

        {% if product_vending_group_boundless_access.isGranted(constant('AppBundle\\Service\\Security\\ProductVendingGroupBoundlessAccess::PRODUCT_VENDING_GROUP_READ')) %}
            <button type="submit" form="product-vending-group-form" name="{{ form.update_and_return.vars.full_name }}" class="btn-save back">
                <span>{{ form.update_and_return.vars.label|trans({}, 'forms') }}</span>
            </button>
        {% endif %}

        <button type="submit" form="product-vending-group-form" name="{{ form.update.vars.full_name }}" class="btn-save">
            <span>{{ form.update.vars.label|trans({}, 'forms') }}</span>
        </button>
    </div>
{% endblock %}