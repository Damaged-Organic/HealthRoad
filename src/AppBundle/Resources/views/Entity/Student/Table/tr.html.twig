{# AppBundle/Resources/views/Entity/Student/Table/tr.html.twig #}
<td class="small-fixed"><span>{{ student.id }}</span></td>
<td>
    <span>
        {{ student.fullName }}
    </span>
</td>
<td>
    <span>
        {{ ( student.nfcTag ) ? ( student.nfcTag.vendingMachine ) ? ( student.nfcTag.vendingMachine.school ) ? student.nfcTag.vendingMachine.school.name : '-' : '-' : '-'  }}
    </span>
</td>
<td>
    <span>
        {{ ( student.nfcTag ) ? student.nfcTag.number  : '-'  }}
    </span>
</td>
<td>
    <span>
        {{ student.totalLimit|number_format(2, ',') }}
    </span>
</td>
<td>
    <span>
        {{ student.dailyLimit|number_format(2, ',') }}
    </span>
</td>
<td>
    <span>
        {{ ( student.customer ) ? student.customer.fullName  : '-'  }}
    </span>
</td>