{# AppBundle/Resources/views/Public/Security/login.html.twig #}
{% extends 'AppBundle:Office:layout.html.twig' %}

{% set metadata = getMetadata() %}

{% block title %}
    {{ metadata.title }} | {{ 'customer_office.title'|trans }}
{% endblock %}

{% block metadata %}
    {{ parent() }}
    <meta name="robots" content="{{ metadata.robots }}">
{% endblock %}

{% block locale %}
    <link rel="canonical" href="{{ url('customer_office_login') }}">
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/app/website/css/auth.bundle.min.css') }}">
{% endblock %}

{% block content %}
    <main id="content">
        <section class="outer auth-holder">
            <h1>Вхід до приватного кабінету</h1>
            <h2>для клієнтів компанії</h2>
            <span class="sprtr-h"></span>

            {% include 'AppBundle:Office/Security/Login:form.html.twig' with { 'lastUsername': lastUsername, 'error': error } only %}

        </section>
    </main>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/app/website/js/auth.bundle.min.js') }}"></script>
{% endblock %}