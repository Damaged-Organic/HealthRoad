{# AppBundle/Resources/views/Public/Security/Login/login.html.twig #}
{% extends 'AppBundle:Office/Security:login.html.twig' %}

{% block form %}
    <form action="{{ path('customer_office_login_check') }}" method="POST" id="auth-form">

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security')|trim('.') }}</div>
        {% endif %}

        <div class="field-area">
            <input type="tel" name="_phoneNumber" value="" id="user-phone-number"
                   placeholder="+38 (099) 999-99-99"
                   data-rule-required="true" data-msg-required="{{ 'customer.authentication.username.not_blank'|trans({}, 'validators') }}"
                   data-mask="+38 (099) 999-99-99">
            <label for="user-phone-number"><span class="hr-phone"></span></label>
        </div>

        <div class="field-area">
            <input type="password" name="_password" value="" id="user-password"
                   placeholder="Ваш пароль"
                   data-rule-required="true" data-msg-required="{{ 'customer.authentication.password.not_blank'|trans({}, 'validators') }}">
            <label for="user-password"><span class="hr-lock"></span></label>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit">
            <span>Увійти</span>
        </button>
    </form>
{% endblock %}